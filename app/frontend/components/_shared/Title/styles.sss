.h1, .h2, .h3, .h4, .h5, .h6
  font-weight: 500
  margin-bottom: 0
  &.shiftedBottom
    margin-bottom: .5em
.h1
  font-size: 2.5em
.h2
  font-size: 2em
.h3
  font-size: 1.6em
.h4
  font-size: 1.2em
.h5
  font-size: 1em
.h6
  font-size: .8em
.interactive
  display: block
  text-decoration-color: transparent
  transition: text-decoration-color .3s
  &:hover
    cursor: pointer
    text-decoration: underline
    text-decoration-color: #000
    transition: text-decoration-color .3s
