.item
  width: calc(100% / 6)
  margin: 10px
  border: 4px dashed rgba(0, 0, 0, .1)
  position: relative
  transition: border-color .3s
  &::before
    content: ''
    width: 100%
    padding-bottom: 141%
    display: block
  &:hover
    cursor: pointer
    border-color: rgba(0, 0, 0, .3)
    transition: border-color .3s
.plus
  size: 40px
  position: absolute
  background-image: svg('plus-round', '[fill]: rgba(0, 0, 0, .3)')
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
